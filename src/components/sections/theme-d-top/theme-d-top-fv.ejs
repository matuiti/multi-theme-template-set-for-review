<div class="bg-[#D9D9D9]">
  <!-- 共通の背景色とパディングを持つラッパー -->
  <div class="visual-wrapper relative bg-primary sm:pt-[var(--header-height-md)]">
    <!-- MV -->
    <section class="mv flex flex-col justify-center h-[665px] sm:h-[580px] lg:h-[620px] xl:h-[700px]"
      aria-labelledby="mv-heading">
      <h2 id="mv-heading" class="sr-only">メインビジュアル</h2>
      <!-- 背景画像、スライド -->
      <!-- 画像が1枚の場合 -->
      <div class="single-image-container relative w-full h-full hidden">
        <!-- 背景画像 -->
        <img src="assets/images/theme-d/theme-d-mv-bg-1.jpg" alt="ダミーテキストイメージを表現した背景"
          class="relative inset-0 w-screen h-full object-cover" />
        <!-- ロゴ -->
        <div class="absolute top-1/4 left-1/2 -translate-x-1/2 -translate-y-1/2 flex justify-center items-center">
          <div class="relative aspect-[248/123] flex justify-center items-center">
            <img src="assets/images/theme-d/theme-d-logo.png" class="aspect-[248/123]" alt="[ダミーテキスト名]" width="260"
              height="260" loading="lazy" />
          </div>
        </div>
      </div>
      <!-- 画像が複数の場合（Swiper使用） -->
      <div class="multiple-images-container relative w-full h-full">
        <div class="swiper mv-bg-swiper w-full h-full" aria-roledescription="カルーセル" aria-label="メインビジュアルスライダー">
          <div class="swiper-wrapper">
            <!-- スライド1 -->
            <div class="swiper-slide w-full h-full" role="group" aria-roledescription="スライド" aria-label="1/3">
              <img src="assets/images/theme-d/theme-d-mv-bg-1.jpg" alt="ダミーテキストイメージを表現した背景1"
                class="relative inset-0 w-screen h-full object-cover" />
              <!-- 各スライド専用のロゴ -->
              <div
                class="absolute top-1/4 left-1/2 -translate-x-1/2 -translate-y-1/2 flex justify-center items-center z-10">
                <div class="relative aspect-[248/123] flex justify-center items-center">
                  <img src="assets/images/theme-d/theme-d-logo.png" class="aspect-[248/123]" alt="[ダミーテキスト名]" width="260"
                    height="260" loading="lazy" />
                </div>
              </div>
            </div>
            <!-- スライド2 -->
            <div class="swiper-slide w-full h-full" role="group" aria-roledescription="スライド" aria-label="2/3">
              <img src="assets/images/theme-d/theme-d-mv-bg-2.jpg" alt="ダミーテキストイメージを表現した背景2"
                class="relative inset-0 w-screen h-full object-cover" />
              <!-- 各スライド専用のロゴ -->
              <div
                class="absolute top-1/4 left-1/2 -translate-x-1/2 -translate-y-1/2 flex justify-center items-center z-10">
                <div class="relative aspect-[248/123] flex justify-center items-center">
                  <img src="assets/images/theme-d/theme-d-logo.png" class="aspect-[248/123]" alt="[ダミーテキスト名]" width="260"
                    height="260" loading="lazy" />
                </div>
              </div>
            </div>
            <!-- スライド3 -->
            <div class="swiper-slide w-full h-full" role="group" aria-roledescription="スライド" aria-label="3/3">
              <img src="assets/images/theme-d/theme-d-mv-bg-3.jpg" alt="ダミーテキストイメージを表現した背景3"
                class="relative inset-0 w-screen h-full object-cover" />
              <!-- 各スライド専用のロゴ -->
              <div
                class="absolute top-1/4 left-1/2 -translate-x-1/2 -translate-y-1/2 flex justify-center items-center z-10">
                <div class="relative aspect-[248/123] flex justify-center items-center">
                  <img src="assets/images/theme-d/theme-d-logo.png" class="aspect-[248/123]" alt="[ダミーテキスト名]" width="260"
                    height="260" loading="lazy" />
                </div>
              </div>
            </div>
          </div>
          <!-- ページネーション -->
          <div
            class="swiper-pagination !top-1/4 !translate-y-[12%] md:!translate-y-[20%] lg:!translate-y-[12%] hidden sm:!flex"
            aria-label="スライドページネーション"></div>
        </div>
      </div>
      <!-- 背景画像、スライド〆 -->
    </section>
    <!-- Swiperカルーセル -->
    <%- include ('./theme-d-top-mv-carousel.ejs') %>
  </div>
  <!-- AD-1 -->
  <%- include ('./theme-d-top-ad-1.ejs') %>
</div>